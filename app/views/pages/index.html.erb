<div class="row-fluid">
	<div class="span8">
		<!--Body content-->
		<div class="page-header">
			<h1>Empleos en tecnologias de informacion <small>Colombia</small></h1>
		</div>
		<%= form_tag jobs_path, :method => :get, :class => 'well form-search' do %>
			<div class="input-prepend">
				<span class="add-on"><i class="icon-search"></i></span><%= text_field_tag 'skill', '', :class => 'input-xlarge search-query', :placeholder=>'ej. java' %>
			</div>
			<div class="input-prepend">
				<span class="add-on"><i class="icon-search"></i></span><%= text_field_tag 'job[geoname]', '', :class => 'input-xlarge search-query', :placeholder=>'ej. Bogotá, Bogotá D.C., Colombia' %>
			</div>
			<button type="submit" class="btn btn-primary">
				Buscar
			</button>
		<% end %>
		<p>
			<span class='label label-info'>Tecnologias:</span>
			<%= @presenter.top_skills.map do |skill|
          		link_to skill, jobs_path({:skill => skill.name})
        	end.to_sentence(:words_connector => ' - ', :last_word_connector => ' - ').html_safe %>
		</p>
		<div class="row-fluid">
			<div class="span6">
				<!-- Ofertas de empleo urgentes -->
				<div class="page-header">
					<h2><i class="icon-fire"></i> Se requiere urgente</h2>
				</div>
				<%= jobs(@presenter.last_jobs) %>
				<p class="pull-right">
					<%= link_to 'Mas ofertas urgentes...', jobs_path(:order => 'urgent') %>
				</p>
			</div>
			<div class="span6">
				<!-- Ultimas ofertas de empleo -->
				<div class="page-header">
					<h2><i class="icon-time"></i> Ultimas ofertas de empleo</h2>
				</div>
				<%= jobs(@presenter.urgent_jobs) %>
				<p class="pull-right">
					<%= link_to 'Mas ofertas de empleo...', jobs_path(:order => 'last') %>
				</p>
			</div>
		</div>
	</div>
	<div class="span4">
		<!--Sidebar content-->
		<div>
			<!--Buscadores de talentos -->
			<h2><i class="icon-bullhorn"></i> Buscadores de talentos!</h2>
			<p>
				<span class="help-block">¿Está buscando un desarrollador de software? Bueno, tú has venido al lugar correcto.</span>
				<%= link_to "Publicar oferta de trabajo", new_job_path, :class => "btn btn-info"%>
			</p>
		</div>
		<!-- Mantengase actualizado -->
		<div class="well" style="padding: 8px 0;">
			<ul class="nav nav-list">
				<li class="nav-header">
					Siganos en las redes sociales
				</li>
				<li>
					<a href="#"><i class="icon-twitter"></i> Twitter</a>
				</li>
				<li>
					<a href="#"><i class="icon-facebook"></i> Facebook</a>
				</li>
				<li>
					<a href="#"><i class="icon-linkedin"></i> Linkedin</a>
				</li>
				<li>
					<a href="#"><i class="icon-google-plus"></i> Google plus</a>
				</li>
			</ul>
		</div>
		<% unless @presenter.random_company.nil? %>
		<div>
			<!-- Empresas destacadas -->
			<h2><i class="icon-thumbs-up"></i> Empresas destacadas</h2>
			<ul class="thumbnails">
				<li class="span12">
					<div class="thumbnail">
						<div style="text-align: center;">
							<%= link_to image_tag(@presenter.random_company.company_logo.url(:medium)), jobs_path({:company_name => @presenter.random_company.company_name}) %>
						</div>
						<div class="caption">
							<h5><%= @presenter.random_company.company_name %></h5>
							<p>
								<%= truncate(strip_tags(@presenter.random_company.company_description), :length => 200) %>
							</p>
							<p>
								<%= link_to "Ver ofertas de #{@presenter.random_company.company_name}...", jobs_path({:company_name => @presenter.random_company.company_name}) %>
							</p>
						</div>
					</div>
				</li>
			</ul>
		</div>
		<% end %>
	</div>
</div>