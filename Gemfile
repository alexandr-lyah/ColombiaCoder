gem 'jquery-rails', '~> 2.1'
# Authentication
gem 'devise'
# Sunspot is a Ruby library for expressive, powerful interaction with the Solr search engine. 
gem 'sunspot_rails'
# barra de progreso en consola
gem 'progress_bar'
# twitter API
gem 'twitter'

# Para subir archivos
gem 'paperclip', '3.2.0'
# Amazon web services
gem 'aws-s3'
gem 'aws-sdk'

