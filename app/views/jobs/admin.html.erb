<%- model_class = Job.new.class -%>
<div class="row-fluid">
	<div class="span9">
		<div class="page-header">
			<h2>Mis ofertas laborales</h2>
		</div>
		<p class="pull-right">
			<%= link_to 'Publicar nueva oferta', new_job_path, :class => 'btn btn-primary' %>
		</p>
		<table class="table table-striped">
			<thead>
				<tr>
					<th><%= model_class.human_attribute_name(:job_title) %></th>
					<th>Estado</th>
					<th><%= t '.actions', :default => t("helpers.actions") %></th>
				</tr>
			</thead>
			<tbody>
				<% @jobs.each do |job| %>
				<tr>
					<td><%= link_to job.job_title, job_path(job) %></td>
					<td><%= status(job) %></td>
					<td>
					<div class="btn-group">
						<%= link_to 'Editar', edit_job_path(job), :class => 'btn' %>
						<button class="btn dropdown-toggle" data-toggle="dropdown">
							<span class="caret"></span>
						</button>
						<ul class="dropdown-menu">
							<% if job.status == 1 %>
							<li>
								<%= link_to 'Publicar', post_job_path(job), :method => :put %>
							</li>
							<% end %>
							<% if job.status == 1 or job.status == 3%>
							<li>
								<%= link_to 'Eliminar', job_path(job), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) %>
							</li>
							<% end %>
							<% if job.status == 3 %>
							<li>
								<%= link_to 'Republicar', republish_job_path(job), :method => :put %>
							</li>
							<% end %>
							<% if job.status == 2 %>
							<li>
								<%= link_to 'Finalizar', close_job_path(job), :method => :put %>
							</li>
							<% end %>
						</ul>
					</div></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div class="span3">
		<%= render @contact %>
	</div>
</div>